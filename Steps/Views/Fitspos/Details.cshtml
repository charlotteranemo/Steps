@model Steps.Models.Fitspo

@{
    ViewData["Title"] = "Details";
}

<div class="mainContainer">
    <h1>Details of Fitspo Article</h1>
    <div class="delTable">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateOfPost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateOfPost)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blurb)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blurb)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Post)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Post)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                @{
                    if (Model.Image != null)
                    {
                        var image = Controllers.FitsposController.GetImageFromByteArray(Model.Image);
                        <img src="@image" alt="A picture for the blog" class="imgSmall" />
                    }
                }
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn2" asp-action="Index">Back to List</a>
    </div>

</div>