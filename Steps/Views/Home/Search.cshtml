@model IEnumerable<Steps.Models.Fitspo>
@{
    ViewData["Title"] = "Search Results";
}

<div class="mainContainer">
    <article id="searchRes">
        <h1>Search Results for: @ViewData["searchStr"]</h1>
        <h2 id="searchCount">@ViewBag.SearchResults</h2>
        @foreach (var article in Model)
        {
    <div class="searchDiv">
        <a asp-controller="Fitspos" asp-action="Single" class="searchArtLink" asp-route-id="@article.Id">
            <article class="searchArticle">
                @{
                    if (article.Image != null)
                    {
                        var image = Controllers.FitsposController.GetImageFromByteArray(article.Image);
                        <img src="@image" alt="A picture for the blog" class="imgSmallest" />
                    }
                }
                <div class="searchArtText">
                    <h2>@article.Title</h2>
                    <p>@article.Blurb</p>
                </div>
            </article>
        </a>
    </div>        }
    </article>
</div>